<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenback"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activityregister">

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Name"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/contactEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Phone Number"
        android:inputType="phone"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/vehicleMakeEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Vehicle Make"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/vehicleModelEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Vehicle Model"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/vehicleYearEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Vehicle Year"
        android:inputType="number"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/driverDoB"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Drivers Date of Birth (mm/dd/yyyy)"
        android:inputType="number"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/policyNum"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Policy Number"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/policyExpire"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Policy Experation Date(mm/dd/yyyy)"
        android:inputType="number"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />


    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Username"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">


        <Button
            android:id="@+id/registerButton"
            android:layout_width="86dp"
            android:layout_height="48dp"
            android:text="Register"
            android:padding="12dp"
            android:layout_marginRight="8dp" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="86dp"
            android:layout_height="48dp"
            android:text="Home"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
